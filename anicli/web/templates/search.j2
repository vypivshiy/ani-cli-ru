{% extends "base.j2" %}

{% block content %}
{% for search in search_results %}
    <div class="row border">
        <div class="col-sm-3"><img src="{{ search.thumbnail }}" alt=""></div>
        <div class="col-sm-3">{{ search.title }}</div>
        <div class="col-sm-3">
            <form id="redirectForm" method="POST" action="/anime">
                <input name="title" type="text" hidden="true" value="{{ search.title }}">
                <input name="url" type="text" hidden="true" value="{{ search.url }}">
                <input type="submit" value="OPEN" class="btn btn-primary">
            </form>
        </div>
    </div>
{% endfor %}
{% endblock %}